<Window x:Class="MunitionAutoPatcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MunitionAutoPatcher.Views"
        xmlns:converters="clr-namespace:MunitionAutoPatcher.Converters"
        mc:Ignorable="d"
        Title="Munition AutoPatcher" Height="600" Width="900">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        
        <DataTemplate x:Key="SettingsViewTemplate">
            <views:SettingsView/>
        </DataTemplate>
        <DataTemplate x:Key="MapperViewTemplate">
            <views:MapperView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="ファイル">
                <MenuItem Header="設定" Command="{Binding ShowSettingsCommand}"/>
                <MenuItem Header="マッピング" Command="{Binding ShowMapperCommand}"/>
                <Separator/>
                <MenuItem Header="終了" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="ヘルプ">
                <MenuItem Header="バージョン情報"/>
            </MenuItem>
        </Menu>

        <!-- Content Area -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,1">
            <ContentControl Content="{Binding CurrentView}">
                <ContentControl.Resources>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="{x:Null}">
                                <Setter Property="ContentTemplate" Value="{x:Null}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Resources>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView.GetType().Name}" Value="SettingsViewModel">
                                <Setter Property="ContentTemplate" Value="{StaticResource SettingsViewTemplate}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView.GetType().Name}" Value="MapperViewModel">
                                <Setter Property="ContentTemplate" Value="{StaticResource MapperViewTemplate}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Log Panel -->
        <GroupBox Grid.Row="3" Header="ログ" Margin="5">
            <ListBox ItemsSource="{Binding LogMessages}" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</Window>
