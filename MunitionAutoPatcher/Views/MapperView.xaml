<UserControl x:Class="MunitionAutoPatcher.Views.MapperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="武器マッピング" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="マッピング生成" 
                    Command="{Binding GenerateMappingsCommand}"
                    IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"
                    Padding="10,5" 
                    Margin="0,0,10,0"/>
            <Button Content="INI生成" 
                    Command="{Binding GenerateIniCommand}"
                    IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"
                    Padding="10,5"/>
        <Button Content="OMOD 抽出" 
            Command="{Binding ExtractOmodsCommand}"
            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"
            Padding="10,5" Margin="10,0,0,0"/>
            <ProgressBar Width="200" 
                         Height="20" 
                         IsIndeterminate="True" 
                         Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                         Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Mappings Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding WeaponMappings}"
                      SelectedItem="{Binding SelectedMapping}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="武器名" Binding="{Binding WeaponName}" Width="*"/>
                <DataGridTextColumn Header="武器FormKey" Binding="{Binding WeaponFormKey}" Width="150"/>
                <DataGridTextColumn Header="弾薬名" Binding="{Binding AmmoName}" Width="*"/>
                <DataGridTextColumn Header="弾薬FormKey" Binding="{Binding AmmoFormKey}" Width="150"/>
                <DataGridTextColumn Header="戦略" Binding="{Binding Strategy}" Width="100"/>
                    <DataGridCheckBoxColumn Header="手動" Binding="{Binding IsManualMapping}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

            <!-- Details pane: ammo selector limited to specific plugin -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TabControl>
                    <TabItem Header="マッピング詳細">
                        <StackPanel Margin="6">
                            <TextBlock Text="選択中のマッピング" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="武器:"/>
                            <TextBlock Text="{Binding SelectedMapping.WeaponName}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Text="弾薬候補 (Munitions - An Ammo Expansion.esl)"/>
                            <ComboBox ItemsSource="{Binding AmmoCandidates}"
                                      SelectedItem="{Binding SelectedAmmo}"
                                      DisplayMemberPath="DisplayName"
                                      Margin="0,5,0,10"/>

                            <Button Content="適用 (選択弾薬をマッピングに反映)"
                                    Command="{Binding ApplyMappingCommand}"
                                    IsEnabled="{Binding SelectedAmmo, Converter={StaticResource InverseBoolConverter}}"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="OMOD 候補">
                        <StackPanel Margin="6">
                            <Button Content="選択中の OMOD をマッピングに追加" Command="{Binding AddOmodToMappingsCommand}" Margin="0,0,0,6"/>
                            <DataGrid ItemsSource="{Binding FilteredOmodCandidates}" SelectedItem="{Binding SelectedOmod}" AutoGenerateColumns="False" IsReadOnly="True" Height="220">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="種類" Binding="{Binding CandidateType}" Width="80" />
                                    <DataGridTextColumn Header="候補 EditorID" Binding="{Binding CandidateEditorId}" Width="150" />
                                    <DataGridTextColumn Header="FormKey" Binding="{Binding CandidateFormKey}" Width="140" />
                                    <DataGridTextColumn Header="候補弾薬" Binding="{Binding CandidateAmmo}" Width="140" />
                                            <DataGridCheckBoxColumn Header="弾薬変更 確認" Binding="{Binding ConfirmedAmmoChange}" Width="80" />
                                            <DataGridTextColumn Header="確認理由" Binding="{Binding ConfirmReason}" Width="200" />
                                    <DataGridTextColumn Header="プラグイン" Binding="{Binding SourcePlugin}" Width="120" />
                                    <DataGridTextColumn Header="SuggestedTarget" Binding="{Binding SuggestedTarget}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
