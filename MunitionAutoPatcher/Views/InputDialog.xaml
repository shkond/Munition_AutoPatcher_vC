<Window x:Class="MunitionAutoPatcher.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="入力" Height="150" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PromptText" Grid.Row="0" Text="" TextWrapping="Wrap" Margin="0,0,0,8" />
        <TextBox x:Name="InputBox" Grid.Row="1" VerticalAlignment="Top" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="OkButton" Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click" />
            <Button x:Name="CancelButton" Content="キャンセル" Width="80" IsCancel="True" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
